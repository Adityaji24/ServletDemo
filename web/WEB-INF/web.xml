<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StudentAddController</servlet-name>
        <servlet-class>com.ram.controller.StudentAddController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewStudent</servlet-name>
        <servlet-class>com.ram.controller.ViewStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteStudent</servlet-name>
        <servlet-class>com.ram.controller.DeleteStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteForm</servlet-name>
        <servlet-class>com.ram.controller.DeleteForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentUpdateController</servlet-name>
        <servlet-class>com.ram.controller.StudentUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentAddController</servlet-name>
        <url-pattern>/StudentAddController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewStudent</servlet-name>
        <url-pattern>/ViewStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/DeleteStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteForm</servlet-name>
        <url-pattern>/DeleteForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentUpdateController</servlet-name>
        <url-pattern>/StudentUpdateController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
